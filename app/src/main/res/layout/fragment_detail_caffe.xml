                                android:layout_weight="1"
                                android:textColor="#262626"
                                android:gravity="right"
                                android:text="$2.65"/>

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/grey_300"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="8dp"
                        android:padding="@dimen/margin_default">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_espresso"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="#262626"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                tools:text="Espresso"/>

                            <TextView
                                android:id="@+id/txt_flag_min_plus_espresso"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="#262626"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:gravity="right"
                                tools:text="-"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/margin_small"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/cb_decaf"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="#262626"
                                tools:text="Decaf"/>

                            <TextView
                                android:id="@+id/txt_espresso_decaf"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="#262626"
                                android:gravity="right"
                                tools:text="$2.65"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/cb_one_shot"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="#262626"
                                tools:text="Add 1 Shot"/>

                            <TextView
                                android:id="@+id/txt_espresso_one_shot"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="#262626"
                                android:gravity="right"
                                tools:text="$2.65"/>

                        </LinearLayout>

