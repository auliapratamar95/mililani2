<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:visibility="visible"
    android:animateLayoutChanges="true"
    tools:visibility="visible">

    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:id="@+id/layout_header_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_default"
                android:layout_marginTop="@dimen/margin_xlarge"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/btn_open_profile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:foreground="?attr/selectableItemBackground">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="@dimen/fo_spacing_70"
                        android:layout_height="@dimen/fo_spacing_70"
                        android:padding="@dimen/margin_small"
                        android:src="@drawable/ic_baseline_person"
                        android:background="@drawable/bg_icon_circle_white"
                        app:civ_border_width="1dp"
                        app:civ_border_color="@color/white"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hello"
                        android:textColor="@color/white"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="right|center"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/btn_scan_barcode"
                        android:layout_width="@dimen/fo_spacing_30"
                        android:layout_height="@dimen/fo_spacing_30"
                        android:src="@drawable/ic_scan_barcode"
                        android:layout_marginRight="@dimen/margin_default"
                        android:backgroundTint="@color/white"
                        android:foreground="?attr/selectableItemBackground"/>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/layout_header_home"
                android:layout_marginTop="@dimen/margin_large"
                android:background="@drawable/fo_bg_bottom_sheet"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ProgressBar
                        android:id="@+id/progress_setting"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        tools:visibility="gone"/>

                    <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/layout_setting"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            tools:visibility="visible"
                            android:padding="@dimen/margin_larges">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginTop="@dimen/margin_large"
                                    android:padding="@dimen/margin_default">

                                    <TextView
                                        android:layout_height="wrap_content"
                                        android:layout_width="match_parent"
                                        android:text="@string/your_favorite"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/fo_font_16"/>

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center|right"
                                    android:padding="@dimen/margin_default"
                                    android:layout_marginTop="@dimen/margin_large"
                                    android:layout_marginEnd="@dimen/margin_xlarge"
                                    tools:ignore="RtlHardcoded">

                                    <TextView
                                        android:id="@+id/btn_edit_quick_link"
                                        android:layout_height="wrap_content"
                                        android:layout_width="match_parent"
                                        android:text="@string/edit"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="@dimen/fo_font_tiny"
                                        android:textStyle="bold"
                                        android:gravity="right|center"/>

                                </RelativeLayout>

                            </LinearLayout>

                            <include
                                layout="@layout/layout_menu_quick_link"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginTop="@dimen/margin_large"
                                    android:padding="@dimen/margin_default">

                                    <TextView
                                        android:layout_height="wrap_content"
                                        android:layout_width="match_parent"
                                        android:text="@string/other_services"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/fo_font_16"/>

                                </RelativeLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/btn_caffe"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="@dimen/margin_large"
                                    android:orientation="horizontal"
                                    android:foreground="?attr/selectableItemBackground">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:padding="@dimen/margin_small"
                                            android:src="@drawable/ic_coffe"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:gravity="center_vertical"
                                            android:text="@string/cafe"
                                            android:layout_marginStart="@dimen/margin_larges"/>

                                    </LinearLayout>

                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:gravity="right|center_vertical"
                                        android:visibility="gone"
                                        tools:ignore="NestedWeights,RtlHardcoded">

                                        <ImageView
                                            android:id="@+id/btn_add_caffe"
                                            android:layout_width="@dimen/fo_size_14"
                                            android:layout_height="@dimen/fo_size_14"
                                            android:background="@drawable/bg_icon_circle_primary"
                                            android:foreground="?attr/selectableItemBackground"
                                            android:padding="3dp"
                                            android:src="@drawable/ic_plus_white" />

                                    </RelativeLayout>

                                </LinearLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/grey_300"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/btn_assessment"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="@dimen/margin_large"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:padding="@dimen/margin_small"
                                            android:src="@drawable/ic_pay_assessments"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:gravity="center_vertical"
                                            android:text="@string/pay_assessments"
                                            android:layout_marginStart="@dimen/margin_larges"/>

                                    </LinearLayout>

                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:visibility="gone"
                                        android:gravity="right|center_vertical">

                                        <ImageView
                                            android:id="@+id/btn_add_payment"
                                            android:layout_width="@dimen/fo_size_14"
                                            android:layout_height="@dimen/fo_size_14"
                                            android:background="@drawable/bg_icon_circle_primary"
                                            android:src="@drawable/ic_plus_white"
                                            android:padding="3dp"/>

                                    </RelativeLayout>

                                </LinearLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/grey_300"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/btn_rec_Center"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="@dimen/margin_large"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:padding="@dimen/margin_small"
                                            android:src="@drawable/ic_recreation"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:gravity="center_vertical"
                                            android:text="@string/recreation_centers"
                                            android:layout_marginStart="@dimen/margin_larges"/>

                                    </LinearLayout>

                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:visibility="gone"
                                        android:gravity="right|center_vertical">

                                        <ImageView
                                            android:id="@+id/btn_add_recreation"
                                            android:layout_width="@dimen/fo_size_14"
                                            android:layout_height="@dimen/fo_size_14"
                                            android:background="@drawable/bg_icon_circle_primary"
                                            android:src="@drawable/ic_plus_white"
                                            android:padding="3dp"/>

                                    </RelativeLayout>

                                </LinearLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/grey_300"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:foreground="?attr/selectableItemBackground"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/btn_notifications"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="@dimen/margin_large"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:padding="@dimen/margin_small"
                                            android:src="@drawable/ic_menu_notification"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:text="@string/notification"
                                            android:gravity="center_vertical"
                                            android:layout_marginStart="@dimen/margin_larges"/>

                                    </LinearLayout>

                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:visibility="gone"
                                        android:gravity="right|center_vertical">

                                        <ImageView
                                            android:id="@+id/btn_add_notification"
                                            android:layout_width="@dimen/fo_size_14"
                                            android:layout_height="@dimen/fo_size_14"
                                            android:background="@drawable/bg_icon_circle_primary"
                                            android:src="@drawable/ic_plus_white"
                                            android:padding="3dp"/>

                                    </RelativeLayout>

                                </LinearLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/grey_300"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/btn_news"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="@dimen/margin_large"
                                    android:orientation="horizontal"
                                    android:visibility="gone"
                                    android:foreground="?attr/selectableItemBackground">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:padding="@dimen/margin_small"
                                            android:src="@drawable/ic_news"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:text="@string/news"
                                            android:gravity="center_vertical"
                                            android:layout_marginStart="@dimen/margin_larges"/>

                                    </LinearLayout>

                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:gravity="right|center_vertical">

                                        <ImageView
                                            android:layout_width="@dimen/fo_size_14"
                                            android:layout_height="@dimen/fo_size_14"
                                            android:background="@drawable/bg_icon_circle_primary"
                                            android:src="@drawable/ic_plus_white"
                                            android:padding="3dp"/>

                                    </RelativeLayout>

                                </LinearLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/grey_300"
                                android:visibility="gone"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/btn_newsletters"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="@dimen/margin_large"
                                    android:foreground="?attr/selectableItemBackground"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:padding="@dimen/margin_small"
                                            android:src="@drawable/ic_newsletters"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:text="@string/newsletters"
                                            android:gravity="center_vertical"
                                            android:layout_marginStart="@dimen/margin_larges"/>

                                    </LinearLayout>

                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:visibility="gone"
                                        android:gravity="right|center_vertical">

                                        <ImageView
                                            android:id="@+id/btn_add_news"
                                            android:layout_width="@dimen/fo_size_14"
                                            android:layout_height="@dimen/fo_size_14"
                                            android:background="@drawable/bg_icon_circle_primary"
                                            android:src="@drawable/ic_plus_white"
                                            android:padding="3dp"/>

                                    </RelativeLayout>

                                </LinearLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/grey_300"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:foreground="?attr/selectableItemBackground"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/btn_forms"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="@dimen/margin_large"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:padding="@dimen/margin_small"
                                            android:src="@drawable/ic_forms"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:text="@string/forms"
                                            android:gravity="center_vertical"
                                            android:layout_marginStart="@dimen/margin_larges"/>

                                    </LinearLayout>

                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:visibility="gone"
                                        android:gravity="right|center_vertical">

                                        <ImageView
                                            android:id="@+id/btn_add_form"
                                            android:layout_width="@dimen/fo_size_14"
                                            android:layout_height="@dimen/fo_size_14"
                                            android:background="@drawable/bg_icon_circle_primary"
                                            android:src="@drawable/ic_plus_white"
                                            android:padding="3dp"/>

                                    </RelativeLayout>

                                </LinearLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/grey_300"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:foreground="?attr/selectableItemBackground"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/btn_employment"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="@dimen/margin_large"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:padding="@dimen/margin_small"
                                            android:src="@drawable/ic_employment"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:gravity="center_vertical"
                                            android:text="@string/employment"
                                            android:layout_marginStart="@dimen/margin_larges"/>

                                    </LinearLayout>

                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:visibility="gone"
                                        android:gravity="right|center_vertical">

                                        <ImageView
                                            android:id="@+id/btn_add_employment"
                                            android:layout_width="@dimen/fo_size_14"
                                            android:layout_height="@dimen/fo_size_14"
                                            android:background="@drawable/bg_icon_circle_primary"
                                            android:src="@drawable/ic_plus_white"
                                            android:padding="3dp"/>

                                    </RelativeLayout>

                                </LinearLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/grey_300"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/btn_waiting_list"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="@dimen/margin_large"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:foreground="?attr/selectableItemBackground"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:padding="@dimen/margin_small"
                                            android:src="@drawable/ic_waiting_list"/>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:gravity="center_vertical"
                                            android:text="@string/waiting_list"
                                            android:layout_marginStart="@dimen/margin_larges"/>

                                    </LinearLayout>

                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:visibility="gone"
                                        android:gravity="right|center_vertical">

                                        <ImageView
                                            android:id="@+id/btn_add_waiting_list"
                                            android:layout_width="@dimen/fo_size_14"
                                            android:layout_height="@dimen/fo_size_14"
                                            android:background="@drawable/bg_icon_circle_primary"
                                            android:src="@drawable/ic_plus_white"
                                            android:padding="3dp"/>

                                    </RelativeLayout>

                                </LinearLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/grey_300"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/btn_contact_us"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="@dimen/margin_large"
                                    android:foreground="?attr/selectableItemBackground"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:padding="@dimen/margin_small"
                                            android:src="@drawable/ic_household" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:gravity="center_vertical"
                                            android:text="@string/household_information"
                                            android:layout_marginStart="@dimen/fo_size_12"/>

                                    </LinearLayout>

                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:visibility="gone"
                                        android:gravity="right|center_vertical">

                                        <ImageView
                                            android:id="@+id/btn_add_contact"
                                            android:layout_width="@dimen/fo_size_14"
                                            android:layout_height="@dimen/fo_size_14"
                                            android:background="@drawable/bg_icon_circle_primary"
                                            android:src="@drawable/ic_plus_white"
                                            android:padding="3dp"/>

                                    </RelativeLayout>

                                </LinearLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/grey_300"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/btn_history"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:padding="@dimen/margin_large"
                                    android:foreground="?attr/selectableItemBackground"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:padding="@dimen/margin_small"
                                            android:src="@drawable/ic_history" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:gravity="center_vertical"
                                            android:text="@string/history"
                                            android:layout_marginStart="@dimen/fo_size_12"/>

                                    </LinearLayout>

                                    <RelativeLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:visibility="gone"
                                        android:gravity="right|center_vertical">

                                        <ImageView
                                            android:id="@+id/btn_add_history"
                                            android:layout_width="@dimen/fo_size_14"
                                            android:layout_height="@dimen/fo_size_14"
                                            android:background="@drawable/bg_icon_circle_primary"
                                            android:src="@drawable/ic_plus_white"
                                            android:padding="3dp"/>

                                    </RelativeLayout>

                                </LinearLayout>

                            </LinearLayout>

