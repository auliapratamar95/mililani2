<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    app:behavior_hideable="true"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_margin="@dimen/fo_spacing_14"
      android:orientation="vertical"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_default"
        android:text="@string/filter"
        android:textAllCaps="true"
        android:textSize="@dimen/text_default"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_default"
        android:text="@string/choose_the_dates_to_show"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <EditText
          android:id="@+id/btn_start_date"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="40"
          android:drawableEnd="@drawable/ic_day"
          android:hint="@string/start_date"/>

      <View
          android:layout_width="0dp"
          android:layout_height="1dp"
          android:layout_gravity="center"
          android:layout_marginEnd="@dimen/margin_default"
          android:layout_marginStart="@dimen/margin_default"
          android:layout_weight="1"
          android:background="@color/colorPrimary"/>

      <EditText
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="40"
          android:drawableEnd="@drawable/ic_day"
          android:hint="@string/end_date"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_default"
        android:text="@string/instructor_name"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Due"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Due"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Due"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Due"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_xlarge"
        android:text="@string/select_category"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_larges">

      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="@dimen/fo_spacing_34"
          android:layout_weight="1"
          android:padding="@dimen/margin_default"
          android:gravity="center"
          android:layout_marginEnd="@dimen/margin_xlarge"
          android:foreground="?attr/selectableItemBackground"
          android:background="@drawable/bg_button_round_white_primary_two">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/Help"
            android:textAllCaps="true"
            android:textSize="@dimen/fo_font_11"
            android:layout_marginStart="@dimen/margin_small"
            android:gravity="center"/>
      </LinearLayout>

      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="@dimen/fo_spacing_34"
          android:layout_weight="1"
          android:padding="@dimen/margin_default"
          android:gravity="center"
          android:layout_marginEnd="@dimen/margin_xlarge"
          android:foreground="?attr/selectableItemBackground"
          android:background="@drawable/bg_button_round_white_primary_two">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/Help"
            android:textAllCaps="true"
            android:textSize="@dimen/fo_font_11"
            android:layout_marginStart="@dimen/margin_small"
            android:gravity="center"/>

      </LinearLayout>

      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="@dimen/fo_spacing_34"
          android:layout_weight="1"
          android:padding="@dimen/margin_default"
          android:gravity="center"
          android:foreground="?attr/selectableItemBackground"
          android:background="@drawable/bg_button_round_white_primary_two">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/Help"
            android:textAllCaps="true"
            android:textSize="@dimen/fo_font_11"
            android:layout_marginStart="@dimen/margin_small"
            android:gravity="center"/>
      </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_larges">

      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="@dimen/fo_spacing_34"
          android:layout_weight="1"
          android:padding="@dimen/margin_default"
          android:gravity="center"
          android:layout_marginEnd="@dimen/margin_xlarge"
          android:foreground="?attr/selectableItemBackground"
          android:background="@drawable/bg_button_round_white_primary_two">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/Help"
            android:textAllCaps="true"
            android:textSize="@dimen/fo_font_11"
            android:layout_marginStart="@dimen/margin_small"
            android:gravity="center"/>
      </LinearLayout>

      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="@dimen/fo_spacing_34"
          android:layout_weight="1"
          android:padding="@dimen/margin_default"
          android:gravity="center"
          android:layout_marginEnd="@dimen/margin_xlarge"
          android:foreground="?attr/selectableItemBackground"
          android:background="@drawable/bg_button_round_white_primary_two">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/Help"
            android:textAllCaps="true"
            android:textSize="@dimen/fo_font_11"
            android:layout_marginStart="@dimen/margin_small"
            android:gravity="center"/>

      </LinearLayout>

      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="@dimen/fo_spacing_34"
          android:layout_weight="1"
          android:padding="@dimen/margin_default"
          android:gravity="center"
          android:foreground="?attr/selectableItemBackground"
          android:background="@drawable/bg_button_round_white_primary_two">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/Help"
            android:textAllCaps="true"
            android:textSize="@dimen/fo_font_11"
            android:layout_marginStart="@dimen/margin_small"
            android:gravity="center"/>
      </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_xxlarge"
        android:orientation="horizontal"
        >

      <Button
          android:id="@+id/btn_reset"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginEnd="@dimen/fo_spacing_60"
          android:layout_weight="1"
          android:background="@drawable/bg_button_round_grey_primary"
          android:foreground="?attr/selectableItemBackground"
          android:text="@string/reset"/>

      <Button
          android:id="@+id/btn_show"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/fo_spacing_60"
          android:layout_weight="1"
          android:background="@drawable/bg_button_round_primary"
          android:foreground="?attr/selectableItemBackground"
          android:text="@string/show"
          android:textColor="@color/white"
          />

    </LinearLayout>

  </LinearLayout>

</RelativeLayout>