<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_header_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_xlarge"
        android:orientation="horizontal"
        android:visibility="invisible"
        android:baselineAligned="false"
        >

      <RelativeLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:layout_weight="2">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:src="@drawable/img_splash_mililani_one"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>

      </RelativeLayout>

      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="4"
          android:gravity="center"
          android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gian Pratama"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gian Pratama"
            android:textColor="@color/white"/>
      </LinearLayout>

      <RelativeLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:gravity="right|center"
          android:layout_weight="1">

        <ImageView
            android:layout_width="@dimen/fo_spacing_30"
            android:layout_height="@dimen/fo_spacing_30"
            android:src="@drawable/ic_events_disable"
            android:layout_marginRight="@dimen/margin_default"
            android:backgroundTint="@color/white"/>
      </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_header_home"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/margin_large"
        android:background="@drawable/fo_bg_bottom_sheet">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

          <RelativeLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button_round_grey_primary"
                android:foreground="?attr/selectableItemBackground">

              <Button
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:background="@color/transparent"
                  android:text="@string/Help"
                  android:textSize="@dimen/text_small"
                  android:drawableEnd="@drawable/ic_help"
                  android:drawablePadding="@dimen/margin_small"
                  android:layout_margin="@dimen/margin_small"/>

            </RelativeLayout>

          </RelativeLayout>

          <RelativeLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              android:src="@drawable/ic_delete_card"/>
          </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

  </RelativeLayout>

</FrameLayout>