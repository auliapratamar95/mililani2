<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    >

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_group_66"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="@dimen/fo_size_150"
          android:layout_marginTop="@dimen/fo_spacing_40"
          android:src="@drawable/ic_card"/>

    </RelativeLayout>

  </RelativeLayout>

  <LinearLayout
      android:id="@+id/layout_send_otp"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_scan_barcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/fo_spacing_10"
        android:padding="@dimen/margin_default">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/title_scan_the_barcode_on_your"
          android:textSize="@dimen/text_xlarge"
          android:gravity="center"
          android:padding="@dimen/margin_xsmall"/>

      <TextView
          android:id="@+id/txt_sample_barcode_result"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:text="@string/title_mta_card_to_save_it"
          android:textSize="@dimen/text_xlarge"
          />

      <FrameLayout
          android:id="@+id/frame_layout_camera"
          android:layout_width="match_parent"
          android:layout_height="@dimen/fo_size_200"
          android:layout_marginTop="@dimen/margin_xlarge"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:padding="@dimen/margin_large"
        android:orientation="vertical">

      <Button
          android:id="@+id/btn_manually_mta_card"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/margin_xlarge"
          android:background="@drawable/bg_button_grey"
          android:foreground="?attr/selectableItemBackground"
          android:text="@string/enter_manually"
          android:textColor="@color/white"/>

      <Button
          android:id="@+id/btn_skip_personal_information"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/margin_large"
          android:background="@drawable/bg_button_round_grey_primary"
          android:foreground="?attr/selectableItemBackground"
          android:text="@string/do_this_later"
          android:textColor="@color/colorPrimary"/>

    </LinearLayout>

  </LinearLayout>

</LinearLayout>