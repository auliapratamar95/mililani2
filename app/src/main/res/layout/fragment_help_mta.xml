<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_large"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_send_otp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_scan_barcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fo_spacing_10"
            android:orientation="vertical"
            android:padding="@dimen/margin_default">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tips for scanning barcode"
                android:textSize="@dimen/fo_font_18"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:text="Position your phone so the barcode appears in the camera viewfinder. The camera should automatically find the barcode." />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_default">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keep in mind, the right distance and angle can help. If your camera is too angled, the app may have trouble recognizing the barcode, so a straight-on approach is best." />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_default">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hold camera steady and try to avoid too much movement so the barcode stays visible." />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>