                android:layout_height="wrap_content"
                android:padding="@dimen/margin_small"
                android:visibility="gone"
                tools:visibility="visible"
                android:src="@drawable/ic_quick_link_caffe"/>

            <RelativeLayout
                android:id="@+id/bg_dash_two"
                android:layout_width="@dimen/fo_size_62"
                android:layout_height="@dimen/fo_size_60"
                android:layout_marginTop="@dimen/margin_small"
                android:padding="@dimen/margin_small"
                android:gravity="center"
                tools:visibility="gone"
                android:background="@drawable/bg_circle_without_dash">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/margin_small"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fo_font_8"
                        android:text="@string/add"
                        android:textColor="@color/color_gray_dash"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fo_font_8"
                        android:textColor="@color/color_gray_dash"
                        android:text="@string/quick_links"/>

                    <ImageView
                        android:layout_width="@dimen/fo_size_10"
                        android:layout_height="@dimen/fo_size_10"
                        android:background="@drawable/bg_circle_gray_dash"
                        android:src="@drawable/ic_plus_white"
                        android:padding="2dp"/>

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/txt_quick_link_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_small"
            android:textSize="@dimen/fo_font_12"
            android:visibility="invisible"
            tools:visibility="invisible"
            android:text="Caffe"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_quick_link_three"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:foreground="?attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
