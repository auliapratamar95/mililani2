<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    app:behavior_hideable="true">

  <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/fo_spacing_14"
      android:layout_marginTop="@dimen/margin_xlarge"
      android:layout_marginBottom="60dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/margin_small"
          android:layout_marginTop="@dimen/margin_default"
          android:text="@string/filter"
          android:textAllCaps="true"
          android:textSize="@dimen/fo_font_normal"
          android:textStyle="bold"/>

      <LinearLayout
          android:id="@+id/btn_date_range"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/margin_small"
          android:layout_marginTop="@dimen/margin_default"
          android:orientation="vertical"
          android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

          <TextView
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="@string/date_range"
              android:textSize="@dimen/fo_font_normal"
              android:layout_marginTop="@dimen/margin_larges"/>

          <RelativeLayout
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:layout_marginTop="@dimen/margin_larges"
              android:gravity="right">

            <ImageView
                android:id="@+id/ic_plus_min_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_plus"
                android:layout_marginEnd="@dimen/margin_small"/>

          </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/grey_300"
            android:layout_marginTop="@dimen/margin_default"/>

      </LinearLayout>

      <LinearLayout
          android:id="@+id/layout_date_range"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/grey_200"
          android:orientation="horizontal"
          android:animateLayoutChanges="true"
          android:visibility="gone"
          tools:visibility="visible">

        <EditText
            android:id="@+id/ed_start_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:drawableEnd="@drawable/ic_choice_calender"
            android:hint="@string/start_date"
            tools:text="21/08/2021"
            android:textColor="@color/black"
            android:textSize="@dimen/fo_font_tiny"
            android:layout_marginTop="@dimen/margin_larges"
            android:focusable="false"
            android:backgroundTint="@color/colorPrimary"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:layout_marginTop="@dimen/margin_larges"/>

        <EditText
            android:id="@+id/ed_end_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:drawableEnd="@drawable/ic_choice_calender"
            android:layout_marginTop="@dimen/margin_larges"
            android:hint="@string/end_date"
            android:textColor="@color/black"
            android:textSize="@dimen/fo_font_tiny"
            android:focusable="false"
            android:backgroundTint="@color/colorPrimary"/>

      </LinearLayout>

      <LinearLayout
          android:id="@+id/btn_location"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/margin_small"
          android:layout_marginTop="@dimen/margin_default"
          android:orientation="vertical"
          android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

          <TextView
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="@string/location"
              android:textSize="@dimen/fo_font_normal"
              android:layout_marginTop="@dimen/margin_larges"/>

          <RelativeLayout
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:layout_marginTop="@dimen/margin_larges"
              android:gravity="right">

            <ImageView
                android:id="@+id/ic_plus_min_location"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_plus"
                android:layout_marginEnd="@dimen/margin_small"/>

          </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/grey_300"
            android:layout_marginTop="@dimen/margin_default"/>

      </LinearLayout>

      <LinearLayout
          android:id="@+id/layout_location"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/grey_200"
          android:orientation="vertical"
          android:visibility="gone"
          tools:visibility="visible">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Due"
            android:textSize="@dimen/fo_font_tiny"
            android:buttonTint="@color/colorPrimary"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Due"
            android:textSize="@dimen/fo_font_tiny"
            android:buttonTint="@color/colorPrimary"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Due"
            android:textSize="@dimen/fo_font_tiny"
            android:buttonTint="@color/colorPrimary"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Due"
            android:textSize="@dimen/fo_font_tiny"
            android:buttonTint="@color/colorPrimary"/>

      </LinearLayout>

      <LinearLayout
          android:id="@+id/btn_category"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/margin_small"
          android:layout_marginTop="@dimen/margin_default"
          android:orientation="vertical"
          android:foreground="?attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

          <TextView
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="@string/category"
              android:textSize="@dimen/fo_font_normal"
              android:layout_marginTop="@dimen/margin_larges"/>

          <RelativeLayout
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:layout_marginTop="@dimen/margin_larges"
              android:gravity="right">

            <ImageView
                android:id="@+id/ic_plus_min_category"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/margin_small"
                android:src="@drawable/ic_plus"
                />

          </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/grey_300"
            android:layout_marginTop="@dimen/margin_default"/>

      </LinearLayout>

      <LinearLayout
          android:id="@+id/layout_category"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:background="@color/grey_200"
          android:layout_marginBottom="10dp"
          android:visibility="gone"
          tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:textSize="@dimen/fo_font_tiny"
            android:text="@string/category"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_larges">

          <CheckBox
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="John Due"
              android:textSize="@dimen/fo_font_tiny"
              android:buttonTint="@color/colorPrimary"/>

          <CheckBox
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="John Due"
              android:textSize="@dimen/fo_font_tiny"
              android:buttonTint="@color/colorPrimary"/>

          <CheckBox
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="John Due"
              android:textSize="@dimen/fo_font_tiny"
              android:buttonTint="@color/colorPrimary"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/margin_xlarge">

          <CheckBox
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="0.6"
              android:text="John Due"
              android:textSize="@dimen/fo_font_tiny"
              android:buttonTint="@color/colorPrimary"/>

          <CheckBox
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="John Due"
              android:textSize="@dimen/fo_font_tiny"
              android:buttonTint="@color/colorPrimary"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/margin_xlarge">

          <CheckBox
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="0.6"
              android:text="John Due"
              android:textSize="@dimen/fo_font_tiny"
              android:buttonTint="@color/colorPrimary"/>

          <CheckBox
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="John Due"
              android:textSize="@dimen/fo_font_tiny"
              android:buttonTint="@color/colorPrimary"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/margin_xlarge"
            android:layout_marginBottom="@dimen/margin_xlarge">

          <CheckBox
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="0.6"
              android:text="John Due"
              android:textSize="@dimen/fo_font_tiny"
              android:buttonTint="@color/colorPrimary"/>

        </LinearLayout>

      </LinearLayout>

    </LinearLayout>


  </androidx.core.widget.NestedScrollView>

  <LinearLayout
      android:id="@+id/layout_btn"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/margin_xxlarge"
      android:layout_alignParentBottom="true"
      android:padding="@dimen/margin_xlarge"
      android:orientation="horizontal"
      >

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/fo_spacing_60"
        android:layout_weight="1"
        android:background="@drawable/bg_button_round_grey_primary"
        android:foreground="?attr/selectableItemBackground"
        android:text="@string/reset"/>

    <Button
        android:id="@+id/btn_show"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fo_spacing_60"
        android:layout_weight="1"
        android:background="@drawable/bg_button_round_primary"
        android:foreground="?attr/selectableItemBackground"
        android:text="@string/show"
        android:textColor="@color/white"/>

  </LinearLayout>

</RelativeLayout>